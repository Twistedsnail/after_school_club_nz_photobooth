#version 110

attribute vec3 position;
attribute vec2 tex_coord;

uniform vec2 offset;
uniform vec2 scale;

varying vec2 tex_out;

void main() {
	vec2 pos = (offset.xy + scale.xy * position.xy) * vec2(2.f, -2.f) - vec2(1.f, -1.f);
	gl_Position = vec4(pos.xy, position.z, 1.f);
	tex_out = tex_coord;
}